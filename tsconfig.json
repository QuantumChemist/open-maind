{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "typeRoots": ["src/@types", "node_modules/@types"],
        "baseUrl": "./",
        "paths": {
            "weights-api": ["../weights.gg-api/libs/weights-api"]
        }
    },
    "include": [
        "src/**/*", 
        "../weights.gg-api/libs/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}