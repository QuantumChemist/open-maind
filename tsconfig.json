{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "typeRoots": ["src/@types", "node_modules/@types"],
        "baseUrl": "./",
    },
    "include": [
        "src/**/*", 
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}